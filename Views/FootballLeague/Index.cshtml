
@model IEnumerable<FootballLeague>

    @{
    ViewData["Title"] = "Index";
}

@if (TempData["ResultOk"] != null)
{
    <h1 class="alert-success">@TempData["ResultOk"]</h1>
}

<div class="container shadow p-5">

    <h1 class="text-center mb-3">Football League Management </h1>

    <div class="col mb-3">
        <a asp-controller="FootballLeague" asp-action="Create" class="btn btn-lg btn-primary"><i class="bi bi-file-plus-fill"></i>Add FootballLeague</a>
    </div>
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <th scope="col">MatchId Name</th>
                <th scope="col">TeamName1</th>
                <th scope="col">TeamName2</th>
                <th scope="col">Status</th>
                  <th scope="col">Winning Team</th>
                    <th scope="col">Points</th>
                <th></th>
            </tr>
        </thead>
        <tbody>

            @foreach (var item in Model)
            {
                <tr>
                    <td width="20%">
                        @item.MatchId
                    </td>
                    <td width="20%">
                        @item.TeamName1
                    </td>
                    <td width="25%">
                        @item.TeamName2
                    </td>
                    <td width="20%">
                        @item.Status
                    </td>
                     <td width="20%">
                        @item.WinningTeam
                    </td>
                     <td width="20%">
                        @item.Points
                    </td>
                    
                    <td>
                        <div role="group" class="w-60 btn-group">
                          
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>